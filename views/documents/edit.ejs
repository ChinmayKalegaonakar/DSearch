<% include ../partials/header %>
          <div class="row">
        <h1 style="text-align: center">Edit Book <%= Docs.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/<%=Docs._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="<%= Docs.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="author" placeholder="<%= Docs.author %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="type" placeholder="<%= Docs.type %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="category" placeholder="<%= Docs.category %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="<%= Docs.img %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="keywords" placeholder="<%= Docs.keywords %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/">Go Back</a>
        </div>
    </div>
    <% include ../partials/footer %>
  